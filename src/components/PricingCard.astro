---
interface Props {
    title: string;
    price: string;
    period: string;
    pricePerMonth?: string; // Pour afficher le prix mensuel de l'offre annuelle
    isPopular?: boolean;
    ctaText?: string;
    ctaLink?: string;
    savings?: string; // Économie réalisée
}

const {
    title,
    price,
    period,
    pricePerMonth,
    isPopular = false,
    ctaText = "Choisir ce plan",
    ctaLink = "https://app.casqueenmains.fr/signup",
    savings,
} = Astro.props;
---

<div
    class={`relative p-8 rounded-2xl border ${
        isPopular
            ? "border-accent/50 bg-gradient-to-b from-navy-800/80 to-navy-900/80 shadow-2xl shadow-accent/10"
            : "border-white/10 glass-card"
    } flex flex-col h-full transition-all duration-300 hover:-translate-y-2 hover:shadow-xl ${
        isPopular ? "hover:shadow-accent/20" : "hover:shadow-white/5"
    }`}
>
    {/* Badge Recommandé */}
    {
        isPopular && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-accent text-white px-6 py-1.5 rounded-full text-sm font-bold shadow-lg shadow-accent/30 flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                Meilleur prix
            </div>
        )
    }

    {/* Badge 7 jours d'essai */}
    <div class="mb-6 inline-flex items-center gap-2 px-3 py-1.5 bg-blue-500/10 border border-blue-500/20 rounded-full text-xs font-medium text-blue-400 self-start">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        7 jours d'essai
    </div>

    <div class="mb-8">
        <h3 class="text-2xl font-bold text-white mb-4">{title}</h3>

        <div class="flex items-baseline gap-2">
            <span class="text-5xl font-bold text-white">{price}</span>
            <span class="text-gray-400 text-lg">/{period}</span>
        </div>

        {/* Prix mensuel équivalent pour l'annuel */}
        {pricePerMonth && (
            <p class="mt-2 text-sm text-gray-400">
                Soit <span class="text-white font-semibold">{pricePerMonth}/mois</span>
            </p>
        )}

        {/* Économie */}
        {savings && (
            <div class="mt-3 inline-flex items-center gap-1.5 px-3 py-1 bg-green-500/10 border border-green-500/20 rounded-full">
                <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                <span class="text-sm font-semibold text-green-400">{savings}</span>
            </div>
        )}

        <p class="mt-4 text-sm text-gray-400">
            Puis abonnement renouvelé automatiquement
        </p>
    </div>

    <a
        href={ctaLink}
        class={`w-full block text-center py-4 px-6 rounded-xl font-bold text-base transition-all duration-200 ${
            isPopular
                ? "bg-accent hover:bg-accent-hover text-white shadow-lg shadow-accent/25 hover:shadow-accent/40 hover:-translate-y-0.5"
                : "bg-white/10 hover:bg-white/20 text-white hover:shadow-lg"
        }`}
    >
        {ctaText}
    </a>
</div>
