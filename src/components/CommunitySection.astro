<section id="community" class="py-24 bg-navy-900 relative overflow-hidden">
    <!-- Background -->
    <div class="absolute bottom-0 right-0 w-[800px] h-[800px] bg-indigo-500/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex flex-col lg:flex-row-reverse items-center gap-12 lg:gap-16">
            <!-- Text Content -->
            <div class="lg:w-1/2">
                <div class="inline-flex items-center px-3 py-1 rounded-full border border-indigo-500/30 bg-indigo-500/10 text-indigo-400 text-xs font-medium mb-6">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Communauté
                </div>
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
                    Progressez ensemble,<br/>
                    <span class="text-indigo-400">dépassez-vous</span>
                </h2>
                <p class="text-gray-400 text-lg mb-8 leading-relaxed">
                    Rejoignez une communauté de candidats motivés. Comparez-vous aux autres, ajoutez des amis et lancez des défis pour rester motivé.
                </p>

                <ul class="space-y-4 mb-8">
                    <li class="flex items-start">
                        <div class="shrink-0 w-6 h-6 rounded-full bg-indigo-500/20 flex items-center justify-center mt-1 mr-4">
                            <svg class="w-4 h-4 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-semibold">Classement national</h3>
                            <p class="text-sm text-gray-500">Comparez votre niveau avec les candidats de toute la France.</p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <div class="shrink-0 w-6 h-6 rounded-full bg-indigo-500/20 flex items-center justify-center mt-1 mr-4">
                            <svg class="w-4 h-4 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-semibold">Filtres par département</h3>
                            <p class="text-sm text-gray-500">Voyez où vous vous situez dans votre région.</p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <div class="shrink-0 w-6 h-6 rounded-full bg-indigo-500/20 flex items-center justify-center mt-1 mr-4">
                            <svg class="w-4 h-4 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-semibold">Système d'amis</h3>
                            <p class="text-sm text-gray-500">Ajoutez des amis et défiez-les en mode multijoueur.</p>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Leaderboard Mockup -->
            <div class="lg:w-1/2 relative">
                <div class="absolute inset-0 bg-indigo-500/20 blur-[80px] rounded-full"></div>
                <div class="glass-card p-4 rounded-2xl border border-white/10 relative max-w-md mx-auto">
                    <div class="bg-navy-800 rounded-xl overflow-hidden border border-white/5">
                        <!-- Header -->
                        <div class="px-4 py-3 border-b border-white/10 flex items-center justify-between">
                            <h3 class="text-white font-semibold">Classement</h3>
                            <div class="flex gap-2">
                                <span class="px-2 py-1 bg-indigo-500/20 text-indigo-300 text-xs rounded-full">National</span>
                            </div>
                        </div>

                        <!-- Podium -->
                        <div class="px-4 py-6 flex items-end justify-center gap-4 border-b border-white/10">
                            <!-- 2nd Place -->
                            <div class="text-center">
                                <div class="w-12 h-12 rounded-full bg-gray-500/20 border-2 border-gray-400 mx-auto mb-2 flex items-center justify-center text-gray-300 font-bold">M</div>
                                <div class="bg-gray-500/20 rounded-t-lg w-16 h-16 flex items-center justify-center">
                                    <span class="text-2xl font-bold text-gray-400">2</span>
                                </div>
                            </div>
                            <!-- 1st Place -->
                            <div class="text-center -mb-2">
                                <div class="w-14 h-14 rounded-full bg-amber-500/20 border-2 border-amber-400 mx-auto mb-2 flex items-center justify-center text-amber-300 font-bold">T</div>
                                <div class="bg-amber-500/20 rounded-t-lg w-16 h-24 flex items-center justify-center">
                                    <span class="text-3xl font-bold text-amber-400">1</span>
                                </div>
                            </div>
                            <!-- 3rd Place -->
                            <div class="text-center">
                                <div class="w-12 h-12 rounded-full bg-orange-700/20 border-2 border-orange-600 mx-auto mb-2 flex items-center justify-center text-orange-400 font-bold">L</div>
                                <div class="bg-orange-700/20 rounded-t-lg w-16 h-12 flex items-center justify-center">
                                    <span class="text-2xl font-bold text-orange-500">3</span>
                                </div>
                            </div>
                        </div>

                        <!-- List -->
                        <div class="divide-y divide-white/5">
                            {[
                                { rank: 4, name: "Alex_SPP", xp: "12,450", isYou: false },
                                { rank: 5, name: "Vous", xp: "11,230", isYou: true },
                                { rank: 6, name: "FireFighter42", xp: "10,890", isYou: false },
                            ].map((user) => (
                                <div class={`px-4 py-3 flex items-center gap-3 ${user.isYou ? 'bg-indigo-500/10' : ''}`}>
                                    <span class={`w-6 text-center font-bold ${user.isYou ? 'text-indigo-400' : 'text-gray-500'}`}>{user.rank}</span>
                                    <div class={`w-8 h-8 rounded-full ${user.isYou ? 'bg-indigo-500/30 border-indigo-400' : 'bg-white/10 border-white/20'} border flex items-center justify-center text-xs font-bold text-white`}>
                                        {user.name.charAt(0)}
                                    </div>
                                    <span class={`flex-1 font-medium ${user.isYou ? 'text-indigo-300' : 'text-gray-300'}`}>{user.name}</span>
                                    <span class="text-gray-400 text-sm">{user.xp} XP</span>
                                </div>
                            ))}
                        </div>

                        <!-- Footer -->
                        <div class="px-4 py-3 bg-white/5 text-center">
                            <span class="text-xs text-gray-500">Mis à jour en temps réel</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
