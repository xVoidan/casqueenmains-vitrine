<section
    id="features-detailed"
    class="py-24 bg-navy-900 relative overflow-hidden"
>
    <!-- Background gradient (no blur for performance) -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-blue-600/5 via-transparent to-accent/5 pointer-events-none"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Section 1: Apprendre -->
        <div class="flex flex-col lg:flex-row items-center gap-16 mb-32">
            <div class="lg:w-1/2">
                <div
                    class="inline-flex items-center px-3 py-1 rounded-full border border-blue-500/30 bg-blue-500/10 text-blue-400 text-xs font-medium mb-6"
                >
                    <svg
                        class="w-4 h-4 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                        ></path></svg
