---
interface Props {
  id: string;
  title: string;
  description?: string | null;
  audioUrl: string;
  coverUrl?: string | null;
  durationSeconds: number;
}

const { id, title, description, audioUrl, coverUrl, durationSeconds } = Astro.props;

// Formater la durÃ©e en mm:ss ou hh:mm:ss
function formatDuration(seconds: number): string {
  const hours = Math.floor(seconds / 3600);
  const minutes = Math.floor((seconds % 3600) / 60);
  const secs = seconds % 60;

  if (hours > 0) {
    return `${hours}:${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
  }
  return `${minutes}:${String(secs).padStart(2, '0')}`;
}

const duration = formatDuration(durationSeconds);
const defaultCover = '/podcast-cover-default.webp';
---

<div class="podcast-card" data-podcast-id={id}>
  <!-- Cover -->
  <div class="podcast-cover">
    <img
      src={coverUrl || defaultCover}
      alt={`Cover ${title}`}
      loading="lazy"
    />
    <button class="podcast-play-btn" aria-label="Lire le podcast" data-audio-url={audioUrl}>
      <svg class="play-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8 5v14l11-7z"/>
      </svg>
      <svg class="pause-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
        <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
      </svg>
    </button>
  </div>

  <!-- Info -->
  <div class="podcast-info">
    <h4 class="podcast-title">{title}</h4>
    {description && <p class="podcast-description">{description}</p>}
    <div class="podcast-meta">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 6v6l4 2"/>
      </svg>
      <span>{duration}</span>
    </div>
  </div>

  <!-- Player (hidden by default, shown when playing) -->
  <div class="podcast-player" style="display: none;">
    <audio preload="metadata">
      <source src={audioUrl} type="audio/mp4" />
    </audio>

    <div class="player-progress">
      <div class="progress-bar">
        <div class="progress-fill"></div>
      </div>
      <div class="progress-times">
        <span class="current-time">0:00</span>
        <span class="total-time">{duration}</span>
      </div>
    </div>

    <div class="player-controls">
      <button class="player-btn rewind" aria-label="Reculer de 10 secondes">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
          <path d="M3 3v5h5"/>
          <text x="9" y="15.5" font-size="7" fill="currentColor" stroke="none">10</text>
        </svg>
      </button>

      <button class="player-btn play-pause" aria-label="Lecture/Pause">
        <svg class="play-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M8 5v14l11-7z"/>
        </svg>
        <svg class="pause-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
          <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
        </svg>
      </button>

      <button class="player-btn forward" aria-label="Avancer de 10 secondes">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 12a9 9 0 1 1-9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"/>
          <path d="M21 3v5h-5"/>
          <text x="9" y="15.5" font-size="7" fill="currentColor" stroke="none">10</text>
        </svg>
      </button>

      <div class="playback-speed">
        <button class="speed-btn" aria-label="Vitesse de lecture">1x</button>
      </div>
    </div>
  </div>
</div>

<style>
  .podcast-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .podcast-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(220, 38, 38, 0.3);
  }

  .podcast-card.playing {
    border-color: rgba(220, 38, 38, 0.5);
    box-shadow: 0 4px 20px rgba(220, 38, 38, 0.2);
  }

  /* Cover */
  .podcast-cover {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .podcast-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .podcast-card:hover .podcast-cover img {
    transform: scale(1.05);
  }

  .podcast-play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(220, 38, 38, 0.9);
    border: none;
    border-radius: 50%;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(220, 38, 38, 0.4);
  }

  .podcast-play-btn:hover {
    background: #DC2626;
    transform: translate(-50%, -50%) scale(1.1);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.6);
  }

  .podcast-card.playing .podcast-play-btn .play-icon {
    display: none;
  }

  .podcast-card.playing .podcast-play-btn .pause-icon {
    display: block;
  }

  /* Info */
  .podcast-info {
    padding: 1.25rem;
  }

  .podcast-title {
    font-size: 1rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }

  .podcast-description {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 0.75rem 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .podcast-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .podcast-meta svg {
    color: #EF4444;
  }

  /* Player */
  .podcast-player {
    padding: 1rem 1.25rem 1.25rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.2);
  }

  .player-progress {
    margin-bottom: 1rem;
  }

  .progress-bar {
    height: 6px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    cursor: pointer;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, #DC2626, #EF4444);
    border-radius: 3px;
    transition: width 0.1s linear;
  }

  .progress-times {
    display: flex;
    justify-content: space-between;
    margin-top: 0.5rem;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    font-family: monospace;
  }

  .player-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .player-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .player-btn.rewind,
  .player-btn.forward {
    width: 40px;
    height: 40px;
  }

  .player-btn.play-pause {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #DC2626, #EF4444);
    border: none;
    color: white;
  }

  .player-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .player-btn.play-pause:hover {
    background: linear-gradient(135deg, #EF4444, #F87171);
    transform: scale(1.05);
  }

  .player-btn.play-pause .play-icon {
    display: block;
  }

  .player-btn.play-pause .pause-icon {
    display: none;
  }

  .podcast-card.playing .player-btn.play-pause .play-icon {
    display: none;
  }

  .podcast-card.playing .player-btn.play-pause .pause-icon {
    display: block;
  }

  .playback-speed {
    margin-left: auto;
  }

  .speed-btn {
    padding: 0.375rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.8125rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .speed-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .podcast-play-btn {
      width: 52px;
      height: 52px;
    }

    .podcast-info {
      padding: 1rem;
    }

    .podcast-player {
      padding: 0.875rem 1rem 1rem;
    }

    .player-btn.play-pause {
      width: 48px;
      height: 48px;
    }

    .player-btn.rewind,
    .player-btn.forward {
      width: 36px;
      height: 36px;
    }
  }
</style>
