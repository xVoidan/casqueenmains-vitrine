import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

export async function getStaticPaths() {
  const { data: documents } = await supabase
    .from('pompier_documents')
    .select('id')
    .eq('status', 'completed')
    .neq('doc_type', 'carte-connaissances');

  return documents?.map((doc) => ({
    params: { id: doc.id },
  })) || [];
}

const { id } = Astro.params;

// Récupérer les informations du document
const { data: document } = await supabase
  .from('pompier_documents')
  .select('id, display_title, doc_type, page_count, cover_image_url, full_pdf_storage_path')
  .eq('id', id)
  .single();

if (!document) {
  return Astro.redirect('/referentiels');
}

// Construire l'URL du PDF
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const pdfUrl = document.full_pdf_storage_path
  ? `${supabaseUrl}/storage/v1/object/public/pompier-documents/${document.full_pdf_storage_path}`
  : null;

// Fonction pour obtenir la couleur d'un type
function getDocTypeColor(docType: string): string {
  const colors: Record<string, string> = {
    'GDO': '#3B82F6',
    'GTO': '#DC2626',
    'RT': '#8B5CF6',
    'Rapport': '#F59E0B',
  };
  return colors[docType] || '#6B7280';
}

const typeColor = getDocTypeColor(document.doc_type);
const appUrl = `https://app.casqueenmains.fr/referentiel/${id}`;

// Fonctionnalités premium
const premiumFeatures = [
  {
    id: 'search',
    icon: 'search',
    label: 'Rechercher',
    description: 'Recherche plein texte dans le document'
  },
  {
    id: 'highlight',
    icon: 'highlight',
    label: 'Surligner',
    description: 'Surlignez les passages importants'
  },
  {
    id: 'annotate',
    icon: 'annotate',
    label: 'Annoter',
    description: 'Ajoutez vos notes personnelles'
  },
  {
    id: 'bookmark',
    icon: 'bookmark',
    label: 'Favoris',
    description: 'Marquez vos pages favorites'
  },
  {
    id: 'audio',
    icon: 'audio',
    label: 'Écouter',
    description: 'Lecture audio du document'
  }
];
