---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

// Récupérer les mémentos depuis Supabase
const { data: mementos, error } = await supabase
  .from('mementos')
  .select('id, slug, title, description, cover_image_url, reference_name, type')
  .order('sort_order', { ascending: true });

if (error) {
  console.error('Error fetching mementos:', error);
}
---

<Layout title="Mémentos & Référentiels - Casque En Mains">
  <div class="learn-container">
    <!-- Background decorative gradients -->
    <div class="learn-bg-decoration">
      <div class="learn-bg-gradient-1"></div>
      <div class="learn-bg-gradient-2"></div>
    </div>
    <div class="learn-content">
      <!-- Header -->
      <div class="learn-header">
        <div class="learn-header-top">
          <svg class="learn-header-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
          </svg>
          <h1 class="learn-header-title">Mémentos & Référentiels</h1>
        </div>
        <p class="learn-header-subtitle">
          Accédez aux mémentos et référentiels pour le concours de Sapeur-Pompier Professionnel
        </p>
      </div>

      <!-- Barre de recherche -->
      {mementos && mementos.length > 0 && (
        <div class="learn-search-container">
          <svg class="learn-search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <input
            type="text"
            id="search-input"
            placeholder="Rechercher un mémento..."
            class="learn-search-input"
          />
        </div>
      )}

      <!-- Grille de couvertures -->
      {mementos && mementos.length > 0 ? (
        <div class="learn-covers-grid">
          {mementos.map((memento) => (
            <a
              href={`/mementos/${memento.slug}`}
              class="learn-cover-card"
              data-memento-type={memento.type}
            >
              <div class="learn-cover-wrapper">
                {memento.cover_image_url ? (
                  <img
                    src={memento.cover_image_url}
                    alt={memento.title}
                    class="learn-cover-image"
                    loading="lazy"
                  />
                ) : (
                  <div class="learn-cover-placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                      <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                    </svg>
                    <p>{memento.title}</p>
                  </div>
                )}

                {/* Bouton lecture rapide */}
                <button
                  class="learn-cover-quick-read-btn"
                  aria-label="Commencer la lecture"
                  title="Commencer la lecture"
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </button>

                {/* Overlay avec titre */}
                <div class="learn-cover-overlay">
                  <span class="learn-cover-label">Basé sur :</span>
                  <h3 class="learn-cover-title">{memento.reference_name || memento.title}</h3>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="learn-no-results">
          <p>Aucun mémento disponible pour le moment.</p>
        </div>
      )}
    </div>
  </div>

  <style>
    /* Container */
    .learn-container {
      min-height: 100vh;
      background: #0B1121;
      padding-top: 80px;
      position: relative;
      overflow: hidden;
    }

    /* Background decorative gradients */
    .learn-bg-decoration {
      position: absolute;
      inset: 0;
      pointer-events: none;
      z-index: 0;
    }

    .learn-bg-gradient-1 {
      position: absolute;
      top: 0;
      right: -10%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
    }

    .learn-bg-gradient-2 {
      position: absolute;
      bottom: 20%;
      left: -10%;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(239, 68, 68, 0.06) 0%, transparent 70%);
    }

    .learn-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem 4rem;
      position: relative;
      z-index: 1;
    }

    /* Header */
    .learn-header {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
      margin-bottom: 32px;
      padding: 0;
    }

    /* Conteneur icône + titre (sur la même ligne) */
    .learn-header-top {
      display: flex;
      align-items: center;
      gap: 16px;
      width: 100%;
      flex-wrap: wrap;
    }

    /* Icône */
    .learn-header-icon {
      width: 32px;
      height: 32px;
      flex-shrink: 0;
      color: #FFFFFF;
    }

    /* Titre */
    .learn-header-title {
      font-size: 32px;
      font-weight: 700;
      color: #FFFFFF;
      margin: 0;
      line-height: 1.2;
      flex: 1;
      min-width: 0;
      word-wrap: break-word;
    }

    /* Sous-titre */
    .learn-header-subtitle {
      font-size: 16px;
      color: #9CA3AF;
      margin: 0;
      line-height: 1.5;
      padding-left: 0;
    }

    /* Barre de recherche */
    .learn-search-container {
      position: relative;
      max-width: 600px;
      margin: 0 0 2rem 0;
      padding: 0;
    }

    .learn-search-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.4);
      pointer-events: none;
    }

    .learn-search-input {
      width: 100%;
      padding: 0.875rem 1rem 0.875rem 3rem;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      color: white;
      font-size: 0.9375rem;
      transition: all 0.3s ease;
    }

    .learn-search-input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }

    .learn-search-input:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(220, 38, 38, 0.5);
      box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
    }

    /* No results */
    .learn-no-results {
      padding: 3rem 2rem;
      text-align: center;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
    }

    .learn-no-results p {
      margin: 0;
      font-size: 0.938rem;
      color: rgba(255, 255, 255, 0.6);
    }

    /* Grille de couvertures */
    .learn-covers-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    @media (min-width: 640px) {
      .learn-covers-grid {
        gap: 1.25rem;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      .learn-covers-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }
    }

    @media (min-width: 1024px) {
      .learn-covers-grid {
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 2.5rem;
      }
    }

    @media (min-width: 1280px) {
      .learn-covers-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 3rem;
      }
    }

    /* Carte de couverture */
    .learn-cover-card {
      position: relative;
      cursor: pointer;
      transition: transform 0.3s ease;
      text-decoration: none;
      display: block;
    }

    .learn-cover-card:hover {
      transform: translateY(-8px);
    }

    /* Wrapper de couverture */
    .learn-cover-wrapper {
      position: relative;
      width: 100%;
      aspect-ratio: 2 / 3;
      overflow: hidden;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
      transition: box-shadow 0.3s ease;
    }

    .learn-cover-card:hover .learn-cover-wrapper {
      box-shadow: 0 12px 32px rgba(220, 38, 38, 0.3), 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    /* Image de couverture */
    .learn-cover-image {
      width: 100%;
      height: 100%;
      object-fit: contain;
      background: #0B1121;
      display: block;
      transition: transform 0.3s ease;
    }

    .learn-cover-card:hover .learn-cover-image {
      transform: scale(1.05);
    }

    /* Placeholder */
    .learn-cover-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      background: rgba(255, 255, 255, 0.05);
      border: 2px dashed rgba(255, 255, 255, 0.2);
      color: rgba(255, 255, 255, 0.4);
      padding: 1.5rem;
      text-align: center;
    }

    .learn-cover-placeholder p {
      margin: 0;
      font-size: 0.875rem;
    }

    /* Bouton lecture rapide */
    .learn-cover-quick-read-btn {
      position: absolute;
      bottom: 0.5rem;
      right: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      background: rgba(251, 191, 36, 0.95);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      color: #1a1a2e;
      cursor: pointer;
      transition: all 0.3s ease;
      z-index: 10;
      box-shadow: 0 4px 12px rgba(251, 191, 36, 0.4);
    }

    @media (min-width: 768px) {
      .learn-cover-quick-read-btn {
        width: 40px;
        height: 40px;
        bottom: 0.75rem;
        right: 0.75rem;
      }
    }

    .learn-cover-card:hover .learn-cover-quick-read-btn {
      background: rgba(245, 158, 11, 1);
      transform: scale(1.1);
      box-shadow: 0 6px 16px rgba(251, 191, 36, 0.5);
      border-color: rgba(255, 255, 255, 0.5);
    }

    /* Overlay avec titre */
    .learn-cover-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      max-height: 40%;
      padding: 0.875rem 0.75rem;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.7) 70%, transparent);
      color: white;
      pointer-events: none;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }

    .learn-cover-label {
      display: block;
      font-size: 0.6rem;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.6);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.25rem;
      flex-shrink: 0;
    }

    .learn-cover-title {
      margin: 0;
      font-size: 0.8rem;
      font-weight: 600;
      line-height: 1.3;
      color: white;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    @media (min-width: 768px) {
      .learn-cover-title {
        font-size: 0.875rem;
      }

      .learn-cover-label {
        font-size: 0.65rem;
      }

      .learn-cover-overlay {
        padding: 0.875rem;
      }
    }
  </style>

  <script>
    // Fonctionnalité de recherche
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const mementoCards = document.querySelectorAll('.learn-cover-card');

    if (searchInput && mementoCards.length > 0) {
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase().trim();

        mementoCards.forEach((card) => {
          const cardElement = card as HTMLElement;
          const title = cardElement.querySelector('.learn-cover-title')?.textContent?.toLowerCase() || '';
          const label = cardElement.querySelector('.learn-cover-label')?.textContent?.toLowerCase() || '';

          // Rechercher dans le titre et le label (référence)
          const matches = title.includes(query) || label.includes(query);

          // Afficher/masquer avec animation
          if (matches) {
            cardElement.style.display = 'block';
            // Petite animation d'apparition
            requestAnimationFrame(() => {
              cardElement.style.opacity = '1';
              cardElement.style.transform = 'scale(1)';
            });
          } else {
            cardElement.style.opacity = '0';
            cardElement.style.transform = 'scale(0.95)';
            setTimeout(() => {
              cardElement.style.display = 'none';
            }, 200);
          }
        });

        // Afficher message si aucun résultat
        const visibleCards = Array.from(mementoCards).filter(
          (card) => (card as HTMLElement).style.display !== 'none'
        );

        const grid = document.querySelector('.learn-covers-grid');
        let noResultsMsg = document.querySelector('.learn-no-results-search');

        if (visibleCards.length === 0 && query) {
          if (!noResultsMsg && grid) {
            noResultsMsg = document.createElement('div');
            noResultsMsg.className = 'learn-no-results learn-no-results-search';
            noResultsMsg.innerHTML = `<p>Aucun mémento trouvé pour "${query}"</p>`;
            grid.parentElement?.appendChild(noResultsMsg);
          }
        } else if (noResultsMsg) {
          noResultsMsg.remove();
        }
      });
    }
  </script>
</Layout>
