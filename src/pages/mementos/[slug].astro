import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

export async function getStaticPaths() {
  const { data: mementos } = await supabase
    .from('mementos')
    .select('slug')
    .order('sort_order', { ascending: true });

  return mementos?.map((memento) => ({
    params: { slug: memento.slug },
  })) || [];
}

const { slug } = Astro.params;

// Récupérer les informations du mémento
const { data: memento } = await supabase
  .from('mementos')
  .select('*')
  .eq('slug', slug)
  .single();

// Récupérer tous les chapitres
const { data: chapters } = await supabase
  .from('memento_contents')
  .select('id, chapter_number, chapter_title, sort_order')
  .eq('memento_slug', slug)
  .order('sort_order', { ascending: true });

// Vérifier s'il y a des podcasts pour ce mémento
const { count: podcastCount } = await supabase
  .from('memento_podcasts')
  .select('id', { count: 'exact', head: true })
  .eq('memento_slug', slug);

const hasPodcasts = (podcastCount ?? 0) > 0;

if (!memento) {
  return Astro.redirect('/mementos');
}

const firstChapterNumber = chapters && chapters.length > 0 ? chapters[0].chapter_number : null;
