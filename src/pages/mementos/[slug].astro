---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';
import PodcastSection from '../../components/PodcastSection.astro';

export async function getStaticPaths() {
  const { data: mementos } = await supabase
    .from('mementos')
    .select('slug')
    .order('sort_order', { ascending: true });

  return mementos?.map((memento) => ({
    params: { slug: memento.slug },
  })) || [];
}

const { slug } = Astro.params;

// Récupérer les informations du mémento
const { data: memento } = await supabase
  .from('mementos')
  .select('*')
  .eq('slug', slug)
  .single();

// Récupérer tous les chapitres
const { data: chapters } = await supabase
  .from('memento_contents')
  .select('id, chapter_number, chapter_title, sort_order')
  .eq('memento_slug', slug)
  .order('sort_order', { ascending: true });

// Vérifier s'il y a des podcasts pour ce mémento
const { count: podcastCount } = await supabase
  .from('memento_podcasts')
  .select('id', { count: 'exact', head: true })
  .eq('memento_slug', slug);

const hasPodcasts = (podcastCount ?? 0) > 0;

if (!memento) {
  return Astro.redirect('/mementos');
}

const firstChapterNumber = chapters && chapters.length > 0 ? chapters[0].chapter_number : null;
---

<Layout title={`${memento.title} - Casque En Mains`}>
  <div class="carte-container">
    <div class="carte-content">
      <!-- Bouton retour -->
      <a href="/mementos" class="carte-back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Retour aux mémentos
      </a>

      <!-- Hero Section - Google Play Books style -->
      <div class="carte-hero">
        <div class="carte-hero-content">
          <!-- Cover Image -->
          {memento.cover_image_url && (
            <div class="carte-hero-cover">
              <img
                src={memento.cover_image_url}
                alt={`Couverture - ${memento.title}`}
                class="carte-hero-cover-img"
              />
            </div>
          )}

          <!-- Sections à droite du cover (desktop) -->
          <div class="carte-hero-right">
            <!-- Section Détails -->
            <div class="carte-section-inline">
              <h3 class="carte-section-title-inline">Détails du mémento</h3>
              <ul class="carte-section-features">
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="carte-feature-icon">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                  </svg>
                  <span>{chapters?.length || 0} fiches de synthèse structurées</span>
                </li>
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="carte-feature-icon">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                  </svg>
                  <span>Quiz d'entraînement à chaque fiche</span>
                </li>
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="carte-feature-icon">
                    <circle cx="12" cy="12" r="10"></circle>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                  <span>Système de surlignage et notes personnelles</span>
                </li>
                <li>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="carte-feature-icon">
                    <circle cx="12" cy="8" r="7"></circle>
                    <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                  </svg>
                  <span>Suivi détaillé de votre progression</span>
                </li>
              </ul>
            </div>

            <!-- Section Référence -->
            {memento.pdf_url && memento.reference_name && (
              <div class="carte-section-inline">
                <h3 class="carte-section-title-inline">Basé sur le référentiel officiel</h3>
                <div class="carte-reference-info">
                  <p class="carte-reference-text">
                    <strong class="carte-reference-name">"{memento.reference_name}"</strong>
                  </p>
                  <p class="carte-reference-source">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="carte-reference-icon">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="2" y1="12" x2="22" y2="12"></line>
                      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                    </svg>
                    Source : {new URL(memento.pdf_url).hostname.replace('www.', '')}
                  </p>
                </div>
                <a href={memento.pdf_url} target="_blank" rel="noopener noreferrer" class="carte-reference-btn">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                  Télécharger
                </a>
              </div>
            )}
          </div>

          <!-- Boutons CTA - en dessous (mobile: après cover, desktop: en dessous) -->
          <div class="carte-hero-bottom">
            <div class="carte-hero-buttons">
              {firstChapterNumber ? (
                <a href={`/mementos/${slug}/${firstChapterNumber}`} class="carte-hero-cta">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                  </svg>
                  LIRE ET S'ENTRAÎNER
                </a>
              ) : (
                <button class="carte-hero-cta" disabled>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                  </svg>
                  AUCUN CHAPITRE DISPONIBLE
                </button>
              )}
            </div>

          </div>
        </div>
      </div>

      <!-- Section Podcasts -->
      <PodcastSection hasPodcasts={hasPodcasts} />
    </div>
  </div>

  <style>
    /* ============================================
       PAGE CARTE CONNAISSANCES - GOOGLE PLAY BOOKS STYLE
       ============================================ */

    .carte-container {
      min-height: 100vh;
      background: linear-gradient(135deg, #1a1a2e 0%, #252545 100%);
      padding-top: 80px;
      padding-bottom: 4rem;
    }

    .carte-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    /* Bouton retour */
    .carte-back-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s ease;
      margin-bottom: 2rem;
    }

    .carte-back-button:hover {
      background: rgba(255, 255, 255, 0.1);
      color: white;
      transform: translateX(-4px);
    }

    /* ============================================
       HERO SECTION
       ============================================ */

    .carte-hero {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 3rem 2rem;
      margin-bottom: 3rem;
      border-radius: 16px;
      background: linear-gradient(135deg, rgba(30, 30, 50, 0.98) 0%, rgba(26, 26, 46, 0.95) 100%);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .carte-hero-content {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 600px;
    }

    /* Conteneur droit - MOBILE (colonne centrée) */
    .carte-hero-right {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
      width: 100%;
      order: 3;
    }

    /* Sections inline */
    .carte-section-inline {
      width: 100%;
    }

    .carte-section-title-inline {
      font-size: 1.125rem;
      font-weight: 700;
      color: #ffffff;
      margin: 0 0 1rem 0;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid rgba(220, 38, 38, 0.3);
    }

    /* Liste de features */
    .carte-section-features {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .carte-section-features li {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.9375rem;
      line-height: 1.5;
      color: rgba(255, 255, 255, 0.85);
    }

    .carte-feature-icon {
      color: #DC2626;
      flex-shrink: 0;
    }

    /* Section Référence */
    .carte-reference-info {
      margin-bottom: 1.25rem;
    }

    .carte-reference-text {
      font-size: 0.9375rem;
      line-height: 1.6;
      margin: 0 0 0.75rem 0;
      color: rgba(255, 255, 255, 0.85);
    }

    .carte-reference-name {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: rgba(251, 191, 36, 0.15);
      border: 1px solid rgba(251, 191, 36, 0.3);
      border-radius: 6px;
      color: #F59E0B;
      font-weight: 600;
    }

    .carte-reference-source {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: rgba(255, 255, 255, 0.7);
      margin: 0 0 1rem 0;
    }

    .carte-reference-icon {
      color: #F59E0B;
      flex-shrink: 0;
    }

    .carte-reference-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.625rem;
      padding: 0.875rem 1.5rem;
      background: rgba(251, 191, 36, 0.15);
      border: 1px solid rgba(251, 191, 36, 0.3);
      border-radius: 10px;
      color: #F59E0B;
      font-size: 0.9375rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .carte-reference-btn:hover {
      background: rgba(251, 191, 36, 0.25);
      border-color: #F59E0B;
      transform: translateY(-2px);
    }

    /* Progression + Boutons */
    .carte-hero-bottom {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
      width: 100%;
      order: 2;
      margin-bottom: 2rem;
    }

    .carte-hero-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
      width: 100%;
    }

    /* Cover */
    .carte-hero-cover {
      position: relative;
      margin-bottom: 2rem;
      order: 1;
      perspective: 1500px;
      will-change: transform;
    }

    .carte-hero-cover-img {
      width: 310px;
      height: 434px;
      object-fit: cover;
      border-radius: 16px;
      border: 1px solid rgba(251, 191, 36, 0.2);
      box-shadow:
        0 0 0 1px rgba(255, 255, 255, 0.05),
        0 8px 24px rgba(220, 38, 38, 0.2),
        0 20px 50px rgba(0, 0, 0, 0.5);
      transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                  box-shadow 0.4s ease,
                  border-color 0.4s ease;
      transform: translateZ(0);
      backface-visibility: hidden;
    }

    .carte-hero-cover::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 50%);
      border-radius: 16px;
      pointer-events: none;
      opacity: 0.5;
    }

    .carte-hero-cover-img:hover {
      transform: scale(1.05) translateY(-6px) translateZ(0);
      border-color: rgba(251, 191, 36, 0.4);
      box-shadow:
        0 0 0 1px rgba(251, 191, 36, 0.3),
        0 12px 32px rgba(220, 38, 38, 0.3),
        0 30px 70px rgba(0, 0, 0, 0.6);
    }

    /* CTA Principal */
    .carte-hero-cta {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      width: 100%;
      max-width: 400px;
      padding: 1rem 2.5rem;
      background: linear-gradient(135deg, #DC2626, #EF4444);
      border: none;
      border-radius: 12px;
      color: #ffffff;
      font-size: 1rem;
      font-weight: 700;
      letter-spacing: 0.5px;
      text-decoration: none;
      cursor: pointer;
      box-shadow: 0 8px 24px rgba(220, 38, 38, 0.4);
      transition: all 0.3s ease;
      text-transform: uppercase;
    }

    .carte-hero-cta:hover {
      background: linear-gradient(135deg, #B91C1C, #DC2626);
      box-shadow: 0 12px 32px rgba(220, 38, 38, 0.5);
      transform: translateY(-2px);
    }

    .carte-hero-cta:active {
      transform: translateY(0);
    }

    .carte-hero-cta:disabled {
      background: rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.4);
      cursor: not-allowed;
      box-shadow: none;
    }

    /* ============================================
       LAYOUT DESKTOP
       ============================================ */

    @media (min-width: 768px) {
      .carte-hero-cover-img {
        width: 380px;
        height: 532px;
      }
    }

    @media (min-width: 1024px) {
      .carte-hero {
        padding: 3rem;
      }

      .carte-hero-content {
        flex-direction: row;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: 3rem;
        max-width: 1200px;
      }

      .carte-hero-cover {
        flex-shrink: 0;
        margin-bottom: 0;
        order: 1;
      }

      .carte-hero-right {
        flex: 1;
        align-items: flex-start;
        gap: 2.5rem;
        order: 2;
      }

      .carte-hero-bottom {
        margin-top: 2.5rem;
        width: 100%;
        flex-basis: 100%;
        order: 3;
        margin-bottom: 0;
      }

      .carte-hero-buttons {
        flex-direction: row;
        justify-content: center;
        gap: 1.5rem;
      }

      .carte-hero-cta {
        flex: 0 1 auto;
        min-width: 280px;
      }
    }

    /* ============================================
       RESPONSIVE
       ============================================ */

    @media (max-width: 767px) {
      .carte-hero {
        padding: 2rem 1rem;
      }

      .carte-hero-cta {
        width: 100%;
        max-width: 100%;
      }

      .carte-reference-name {
        width: 100%;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      .carte-hero {
        padding: 3.5rem 3rem;
      }

      .carte-content {
        padding: 2rem 2.5rem;
        max-width: 900px;
      }
    }
  </style>
</Layout>
