import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

// Types de documents avec couleurs
const DOC_TYPES = [
  { value: '', label: 'Tous', color: '' },
  { value: 'GDO', label: 'GDO', color: '#3B82F6' },
  { value: 'GTO', label: 'GTO', color: '#DC2626' },
  { value: 'RT', label: 'RT', color: '#8B5CF6' },
  { value: 'Rapport', label: 'Rapports', color: '#F59E0B' },
  { value: 'autres', label: 'Autres', color: '#6B7280' },
];

// Types regroupés dans "Autres"
const AUTRES_DOC_TYPES = ['Guide', 'PSE', 'PSC1', 'Loi', 'PLAN', 'PROPOSITION', 'Référentiel', 'Autre', 'Cartes'];

// Récupérer les documents depuis Supabase (exclure carte-connaissances)
const { data: documents, error } = await supabase
  .from('pompier_documents')
  .select('id, display_title, doc_type, page_count, cover_image_url, full_pdf_storage_path')
  .eq('status', 'completed')
  .neq('doc_type', 'carte-connaissances')
  .order('doc_type')
  .order('display_title');

if (error) {
  console.error('Error fetching documents:', error);
}

// Calculer les stats par type
const stats = {
  total: documents?.length || 0,
  types: {} as Record<string, number>
};

if (documents) {
  let autresCount = 0;
  for (const doc of documents) {
    if (AUTRES_DOC_TYPES.includes(doc.doc_type)) {
      autresCount++;
    } else {
      stats.types[doc.doc_type] = (stats.types[doc.doc_type] || 0) + 1;
    }
  }
  stats.types['autres'] = autresCount;
}

// Fonction pour obtenir la couleur d'un type
function getDocTypeColor(docType: string): string {
  if (AUTRES_DOC_TYPES.includes(docType)) return '#6B7280';
  const type = DOC_TYPES.find(t => t.value === docType);
  return type?.color || '#6B7280';
}

// Construire l'URL publique du storage
function getStorageUrl(path: string): string {
  const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
  return `${supabaseUrl}/storage/v1/object/public/pompier-documents/${path}`;
}
---

<Layout title="Référentiels - Casque En Mains" description="Accédez aux référentiels officiels (GDO, GTO, RT) pour le concours de Sapeur-Pompier Professionnel">
  <div class="ref-container">
    <!-- Background decorative gradients -->
    <div class="ref-bg-decoration">
      <div class="ref-bg-gradient-1"></div>
      <div class="ref-bg-gradient-2"></div>
    </div>
    <div class="ref-content">
      <!-- Header -->
      <div class="ref-header">
        <div class="ref-header-top">
          <svg class="ref-header-icon" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          <h1 class="ref-header-title">Référentiels</h1>
        </div>
        <p class="ref-header-subtitle">
          Consultez les documents officiels (GDO, GTO, RT) pour préparer votre concours
        </p>
      </div>

      <!-- Info légale -->
      <div class="ref-legal-info">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="16" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
        <p>
          Ces documents officiels sont publiés par la <strong>DGSCGC</strong> et le <strong>Ministère de l'Intérieur</strong>.
          Leur accès est <strong>gratuit</strong>. L'application premium offre des outils avancés (annotations, favoris, recherche).
        </p>
      </div>

      <!-- Filtres -->
      <div class="ref-filters">
        {DOC_TYPES.map((type) => {
          const count = type.value ? (type.value === 'autres' ? stats.types['autres'] : stats.types[type.value]) || 0 : stats.total;
          return (
            <button
              class="ref-filter-chip"
              data-filter={type.value}
              style={type.color ? `--chip-color: ${type.color}` : ''}
            >
              {type.label}
              {count > 0 && <span class="ref-filter-count">({count})</span>}
            </button>
          );
        })}
      </div>

      <!-- Barre de recherche -->
      {documents && documents.length > 0 && (
        <div class="ref-search-container">
          <svg class="ref-search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <input
            type="text"
            id="search-input"
            placeholder="Rechercher un document..."
            class="ref-search-input"
          />
        </div>
      )}

      <!-- Grille de documents -->
      {documents && documents.length > 0 ? (
        <div class="ref-grid">
          {documents.map((doc) => {
            const typeColor = getDocTypeColor(doc.doc_type);
            const pdfUrl = doc.full_pdf_storage_path ? getStorageUrl(doc.full_pdf_storage_path) : null;
            const isAutres = AUTRES_DOC_TYPES.includes(doc.doc_type);

            return (
              <div
                class="ref-card"
                data-doc-type={isAutres ? 'autres' : doc.doc_type}
                data-title={doc.display_title.toLowerCase()}
              >
                <a href={`/referentiel/${doc.id}`} class="ref-card-cover">
                  {doc.cover_image_url ? (
                    <img
                      src={doc.cover_image_url}
                      alt={doc.display_title}
                      class="ref-card-image"
                      loading="lazy"
                    />
                  ) : (
                    <div class="ref-card-placeholder">
                      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                      </svg>
                    </div>
                  )}
                  <div class="ref-card-overlay">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    <span>Lire</span>
                  </div>
                </a>
                <div class="ref-card-info">
                  <span
                    class="ref-card-type"
                    style={`background-color: ${typeColor}20; color: ${typeColor}; border-color: ${typeColor}40`}
                  >
                    {doc.doc_type}
                  </span>
                  <h3 class="ref-card-title">{doc.display_title}</h3>
                  <div class="ref-card-actions">
                    <a href={`/referentiel/${doc.id}`} class="ref-card-read-btn">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                      </svg>
                      Lire
                    </a>
                    {pdfUrl && (
                      <a href={pdfUrl} target="_blank" rel="noopener noreferrer" class="ref-card-download-btn">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                          <polyline points="7 10 12 15 17 10"></polyline>
                          <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        PDF
                      </a>
                    )}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      ) : (
        <div class="ref-no-results">
          <p>Aucun document disponible pour le moment.</p>
        </div>
      )}

      <!-- CTA vers l'app -->
      <div class="ref-cta-section">
        <div class="ref-cta-content">
          <h2>Besoin de plus d'outils ?</h2>
          <p>Annotations, favoris, recherche avancée, surlignage... Découvrez toutes les fonctionnalités dans l'application.</p>
          <a href="https://app.casqueenmains.fr/referentiels" target="_blank" rel="noopener noreferrer" class="ref-cta-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
            Ouvrir l'application
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Container */
    .ref-container {
      min-height: 100vh;
      background: #0B1121;
      padding-top: 80px;
      position: relative;
      overflow: hidden;
    }

    /* Background decorative gradients */
    .ref-bg-decoration {
      position: absolute;
      inset: 0;
      pointer-events: none;
      z-index: 0;
    }

    .ref-bg-gradient-1 {
      position: absolute;
      top: 0;
      right: -10%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
    }

    .ref-bg-gradient-2 {
      position: absolute;
      bottom: 20%;
      left: -10%;
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(239, 68, 68, 0.06) 0%, transparent 70%);
    }

    .ref-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem 4rem;
      position: relative;
      z-index: 1;
    }

    /* Header */
    .ref-header {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
      margin-bottom: 24px;
    }

    .ref-header-top {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .ref-header-icon {
      width: 32px;
      height: 32px;
      color: #FFFFFF;
    }

    .ref-header-title {
      font-size: 32px;
      font-weight: 700;
      color: #FFFFFF;
      margin: 0;
    }

    .ref-header-subtitle {
      font-size: 16px;
      color: #9CA3AF;
      margin: 0;
    }

    /* Info légale */
    .ref-legal-info {
      display: flex;
      align-items: flex-start;
      gap: 12px;
      padding: 16px;
      background: rgba(59, 130, 246, 0.1);
      border: 1px solid rgba(59, 130, 246, 0.2);
      border-radius: 12px;
      margin-bottom: 24px;
    }

    .ref-legal-info svg {
      flex-shrink: 0;
      color: #3B82F6;
      margin-top: 2px;
    }

    .ref-legal-info p {
      font-size: 0.875rem;
      color: rgba(255, 255, 255, 0.8);
      margin: 0;
      line-height: 1.5;
    }

    .ref-legal-info strong {
      color: #FFFFFF;
    }

    /* Filtres */
    .ref-filters {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-bottom: 24px;
    }

    .ref-filter-chip {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 8px 16px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .ref-filter-chip:hover {
      background: rgba(255, 255, 255, 0.1);
      color: #FFFFFF;
    }

    .ref-filter-chip.active {
      background: var(--chip-color, #DC2626);
      border-color: var(--chip-color, #DC2626);
      color: #FFFFFF;
    }

    .ref-filter-count {
      font-size: 0.75rem;
      opacity: 0.7;
    }

    /* Recherche */
    .ref-search-container {
      position: relative;
      max-width: 600px;
      margin-bottom: 32px;
    }

    .ref-search-icon {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.4);
    }

    .ref-search-input {
      width: 100%;
      padding: 14px 16px 14px 48px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      color: #FFFFFF;
      font-size: 0.9375rem;
      transition: all 0.3s ease;
    }

    .ref-search-input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }

    .ref-search-input:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(220, 38, 38, 0.5);
      box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
    }

    /* Grille */
    .ref-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    @media (min-width: 768px) {
      .ref-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
      }
    }

    @media (min-width: 1024px) {
      .ref-grid {
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
      }
    }

    /* Carte document */
    .ref-card {
      display: flex;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .ref-card:hover {
      transform: translateY(-4px);
      border-color: rgba(220, 38, 38, 0.3);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    }

    .ref-card.hidden {
      display: none;
    }

    .ref-card-cover {
      position: relative;
      aspect-ratio: 3 / 4;
      overflow: hidden;
      cursor: pointer;
      background: rgba(255, 255, 255, 0.03);
    }

    .ref-card-image {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    .ref-card:hover .ref-card-image {
      transform: scale(1.05);
    }

    .ref-card-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(255, 255, 255, 0.05);
      color: rgba(255, 255, 255, 0.3);
    }

    .ref-card-overlay {
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 8px;
      background: rgba(0, 0, 0, 0.6);
      opacity: 0;
      transition: opacity 0.3s ease;
      color: #FFFFFF;
      font-weight: 500;
    }

    .ref-card:hover .ref-card-overlay {
      opacity: 1;
    }

    .ref-card-info {
      padding: 12px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .ref-card-type {
      display: inline-block;
      padding: 4px 8px;
      border-radius: 6px;
      font-size: 0.75rem;
      font-weight: 600;
      border: 1px solid;
      width: fit-content;
    }

    .ref-card-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: #FFFFFF;
      line-height: 1.3;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      margin: 0;
    }

    .ref-card-actions {
      display: flex;
      gap: 8px;
      margin-top: 4px;
    }

    .ref-card-read-btn,
    .ref-card-download-btn {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 0.75rem;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .ref-card-read-btn {
      background: rgba(220, 38, 38, 0.1);
      color: #EF4444;
      border: 1px solid rgba(220, 38, 38, 0.2);
    }

    .ref-card-read-btn:hover {
      background: rgba(220, 38, 38, 0.2);
    }

    .ref-card-download-btn {
      background: rgba(255, 255, 255, 0.05);
      color: rgba(255, 255, 255, 0.7);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .ref-card-download-btn:hover {
      background: rgba(255, 255, 255, 0.1);
      color: #FFFFFF;
    }

    /* No results */
    .ref-no-results {
      padding: 48px 24px;
      text-align: center;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
    }

    .ref-no-results p {
      margin: 0;
      color: rgba(255, 255, 255, 0.6);
    }

    /* CTA Section */
    .ref-cta-section {
      margin-top: 48px;
      padding: 32px;
      background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
      border: 1px solid rgba(220, 38, 38, 0.2);
      border-radius: 16px;
      text-align: center;
    }

    .ref-cta-content h2 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #FFFFFF;
      margin: 0 0 12px 0;
    }

    .ref-cta-content p {
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.7);
      margin: 0 0 24px 0;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    .ref-cta-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 14px 28px;
      background: linear-gradient(135deg, #DC2626, #EF4444);
      border-radius: 12px;
      color: #FFFFFF;
      font-size: 1rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
    }

    .ref-cta-btn:hover {
      background: linear-gradient(135deg, #B91C1C, #DC2626);
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(220, 38, 38, 0.4);
    }
  </style>

  <script>
    // Filtres
    const filterChips = document.querySelectorAll('.ref-filter-chip');
    const cards = document.querySelectorAll('.ref-card');
    let activeFilter = '';

    filterChips.forEach(chip => {
      chip.addEventListener('click', () => {
        const filter = chip.getAttribute('data-filter') || '';

        // Mettre à jour l'état actif
        filterChips.forEach(c => c.classList.remove('active'));
        chip.classList.add('active');
        activeFilter = filter;

        // Filtrer les cartes
        filterCards();
      });
    });

    // Premier chip actif par défaut
    filterChips[0]?.classList.add('active');

    // Recherche
    const searchInput = document.getElementById('search-input') as HTMLInputElement;

    if (searchInput) {
      searchInput.addEventListener('input', () => {
        filterCards();
      });
    }

    function filterCards() {
      const query = searchInput?.value.toLowerCase().trim() || '';

      cards.forEach(card => {
        const docType = card.getAttribute('data-doc-type') || '';
        const title = card.getAttribute('data-title') || '';

        // Filtre par type
        let matchesType = true;
        if (activeFilter) {
          matchesType = docType === activeFilter;
        }

        // Filtre par recherche
        const matchesSearch = !query || title.includes(query);

        // Afficher/masquer
        if (matchesType && matchesSearch) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    }
  </script>
</Layout>
