---
import Layout from "../../layouts/Layout.astro";
import { sheets } from "../../data/sheets";

export function getStaticPaths() {
    return sheets.map((sheet) => ({
        params: { slug: sheet.slug },
        props: { sheet },
    }));
}

const { sheet } = Astro.props;
---

<Layout title={sheet.title} description={sheet.description}>
    <div class="pt-20 min-h-screen flex flex-col md:flex-row">
        <!-- Sidebar Navigation -->
        <aside
            class="w-full md:w-64 lg:w-80 bg-navy-800/50 border-r border-white/5 md:fixed md:h-[calc(100vh-5rem)] md:overflow-y-auto z-20 backdrop-blur-md"
        >
            <div class="p-6">
                <a
                    href="/memento"
                    class="inline-flex items-center text-sm text-gray-400 hover:text-white mb-6 transition-colors"
                >
                    <svg
                        class="w-4 h-4 mr-1"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Retour au Mémento
                </a>
                <h1 class="text-xl font-bold text-white mb-2">{sheet.title}</h1>
                <span
                    class="inline-block px-2 py-1 rounded-md bg-accent/10 text-accent text-xs font-medium mb-6"
                >
                    {sheet.category}
                </span>

                <nav class="space-y-1">
                    <p
                        class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3"
                    >
                        Sommaire
                    </p>
                    {
                        sheet.chapters.map((chapter, index) => (
                            <a
                                href={`#chapter-${index}`}
                                class="block px-3 py-2 rounded-md text-sm text-gray-300 hover:bg-white/5 hover:text-white transition-colors"
                            >
                                {index + 1}. {chapter.title}
                            </a>
                        ))
                    }
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 md:ml-64 lg:ml-80 p-6 md:p-12 lg:p-16 max-w-4xl">
            <div class="prose prose-invert prose-lg max-w-none">
                <p
                    class="lead text-xl text-gray-300 mb-12 border-l-4 border-accent pl-6 italic"
                >
                    {sheet.description}
                </p>

                {
                    sheet.chapters.map((chapter, index) => (
                        <section
                            id={`chapter-${index}`}
                            class="mb-16 scroll-mt-32"
                        >
                            <h2 class="text-2xl md:text-3xl font-bold text-white mb-6 flex items-center">
                                <span class="shrink-0 w-8 h-8 rounded-full bg-accent text-white flex items-center justify-center text-sm font-bold mr-4">
                                    {index + 1}
                                </span>
                                {chapter.title}
                            </h2>
                            <div
                                class="text-gray-300 leading-relaxed bg-navy-800/30 p-6 rounded-xl border border-white/5"
                                set:html={chapter.content}
                            />
                        </section>
                    ))
                }
            </div>

            <!-- Navigation Footer -->
            <div
                class="mt-20 pt-8 border-t border-white/10 flex justify-between items-center"
            >
                <a
                    href="/memento"
                    class="text-gray-400 hover:text-white transition-colors"
                >
                    &larr; Retour aux fiches
                </a>
                <a
                    href="#"
                    class="bg-accent hover:bg-accent-hover text-white px-6 py-3 rounded-lg font-medium transition-colors"
                >
                    S'entraîner sur ce sujet
                </a>
            </div>
        </main>
    </div>
</Layout>
